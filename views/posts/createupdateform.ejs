<%- include('../partials/header') %>

<div class="form-group">
    <label for="title">title.txt</label>
    <input required value ="<%= post.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group">
    <label for="description">description.txt</label>
    <textarea name="description" id="description" class="form-control" cols="30" rows="3"><%= post.description %></textarea>
</div>

<div class="form-group">
    <label for="markdown">post.txt</label>
    <textarea name="markdown" id="markdown" class="form-control" cols="30" rows="10"><%= post.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary">cancel.exe</a>

<button type="submit" class="btn btn-primary">save.exe</button>
